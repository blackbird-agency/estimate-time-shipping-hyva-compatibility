<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="checkout.section.additional-options">
            <block
                name="checkout.estimated-date"
                template="Blackbird_EstimateTimeShippingHyvaCompatibility::checkout/estimated-date.phtml"
                after="-"
            />
        </referenceContainer>
        <referenceContainer name="checkout.price-summary.section">
            <!-- Override the default product type renderer to include estimated dates -->
            <referenceBlock name="price-summary.cart-items">
                <referenceBlock name="cart-items.product-type-renderers">
                    <referenceBlock name="product-type.simple">
                        <action method="setTemplate">
                            <argument name="template" xsi:type="string">Blackbird_EstimateTimeShippingHyvaCompatibility::checkout/cart-items/type/default.phtml</argument>
                        </action>
                    </referenceBlock>
                </referenceBlock>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>

